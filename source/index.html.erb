---
body_class: c-index
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <%= partial 'partials/article', locals: {article: article, summary: true} %>
<% end %>

<hr style="margin-top: 60px">

<div style="margin-bottom: 100px">
  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <span style="margin-right: 10px"><%= link_to '← Previous', prev_page %></span>
    <% end %>

    <% if next_page %>
      <span><%= link_to 'Next →', next_page %></span>
    <% end %>
  <% end %>
</div>
