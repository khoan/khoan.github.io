---
body_class: c-index
pageable: true
---

<% page_articles.each_with_index do |article, i| %>
  <%= partial 'partials/article', locals: {:article => article, :summary => true} %> 
<% end %>

<% if paginate %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>

  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
